---
const { class: className = "", ...props } = Astro.props;
---

<div
  {...props}
  class={`slide shrink-0 snap-center w-full lg:w-auto ${className}`}
>
  <slot />
</div>

<style>
  .slide {
    max-width: calc(100% - var(--spacing) * 10);
  }

  @media (width >= 64rem) {
    .slide {
      max-width: calc(100% - var(--spacing) * 20);
    }
  }
</style>
