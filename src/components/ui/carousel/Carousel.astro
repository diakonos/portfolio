---
const { class: className = "", ...props } = Astro.props;
---

<div {...props} class={`carousel ${className}`}>
  <div class="carousel-viewport flex snap-x snap-mandatory overflow-x-scroll">
    <slot />
  </div>
  <div>
    <slot name="dots" />
  </div>
</div>

<style>
  .carousel-viewport {
    padding-left: calc(
      (100% - min(1200px, calc(100% - var(--spacing) * 10))) / 2
    );
    padding-right: calc(
      (100% - min(1200px, calc(100% - var(--spacing) * 10))) / 2
    );
  }

  .carousel-viewport::after {
    content: "";
    border-right: 1px solid transparent;
  }
</style>
